{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",               
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir":"./src",
    "lib": ["ESNext"],
    "sourceMap": true,  
    "declaration": true
    
    
  },
  "include": ["src"]
}
