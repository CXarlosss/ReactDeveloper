{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*"],
      "config/*": ["config/*"],
      "handlers/*": ["handlers/*"],
      "middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["src"]
}
